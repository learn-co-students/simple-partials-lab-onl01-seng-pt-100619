
<%= form_for @student do %>
<p>
  <label> Name </label><br>
  <%= text_field_tag :name, @student.name %><br>
</p>
<p>
  <label> Hometown </label>
  <%= text_field_tag :hometown, @student.hometown %>
</p>
<p>
  <label> Birthday </label>
  <%= date_field :birthday, @student.birthday %>
</p>

<%= submit_tag "Create Student/Update Student" %>
<% end %>

